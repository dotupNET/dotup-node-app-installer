{
  "production": true,
  "service": "serviceName",
  "targetPath": "/home/pi/moto",
  "git": {
    "userName": "dotupNET",
    "repositoryName": "motolaps-device-discovery"
  },
  "systemd": {
    "Description": "MotoBoard device discovery",
    "After": "network.target",
    "Restart": "",
    "User": "nobody",
    "Group": "nogroup",
    "Environment": [
      "/usr/bin:/usr/local/bin",
      "NODE_ENV=production"
    ],
    "WorkingDirectory": "/var/moto/Server",
    "WantedBy": "multi-user.target"
  },
  "postCommands": [
    "sudo ln -s /home/pi/moto/motobox/dist/app.js /usr/bin/motobox",
    "sudo systemctl daemon-reload",
    "sudo systemctl enable {service}",
    "sudo systemctl restart {service}"
  ]
}